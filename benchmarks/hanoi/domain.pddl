
(define (domain hanoi)
(:requirements :strips)
(:constants peg1 peg2 peg3 )
(:predicates (clear ?x)
             (on ?x ?y)
             (smaller ?x ?y)
             (next ?x ?y))

(:action move
:parameters (?disc ?from ?to)
:precondition (and (smaller ?to ?disc)
                   (on ?disc ?from)
                   (clear ?disc)
                   (clear ?to))
:effect  (and (clear ?from)
              (on ?disc ?to)
              (not (on ?disc ?from))
              (not (clear ?to)))
 )
 )
